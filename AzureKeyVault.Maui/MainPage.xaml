<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AzureKeyVault.Maui.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="10,0"
            Spacing="25">
            <Image
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"
                 />

            <Label
                Text="{Binding  Label1Text}"
                Style="{StaticResource Headline}"
                 />

            <Label
 Text="{Binding  Label2Text}"
Style="{StaticResource Headline}"
 />

            <Label
      Text="{Binding  Label3Text}"
      Style="{StaticResource Headline}"
      />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
